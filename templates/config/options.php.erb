<% @options.keys.sort.each do |key| -%>
<% value = @options[key] -%>
  <%- if value.is_a? Array -%>
$CONF['<%= key %>'] = array(<%= value.map! { |element| "'#{element}'" }.join(', ') %>);
  <%- else -%>
$CONF['<%= key %>'] = <%= (value.is_a? String) ? "'#{value}'" : value %>;
  <%- end -%>
<% end -%>
